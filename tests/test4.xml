<?xml version="1.0"?>
<templates xmlns="http://www.fixprotocol.org/ns/template-definition" templateNs="http://www.ociweb.com/ns/templates/mfast_json" ns="http://www.ociweb.com/ns/mfast">

    <define name="Address">
      <group>
        <string name="streetAddress" />
        <string name="city" />
        <string name="state" />
        <uInt32 name="postalCode" />
      </group>
    </define>

    <define name="PhoneNumbers">
      <sequence>
          <string name="type" />
          <string name="number" />
      </sequence>
    </define>

    <define name="Emails">
      <sequence>
          <string name="email" />
      </sequence>
    </define>

    <define name="Gender">
      <enum>
        <element name="male"/>
        <element name="female"/>
      </enum>
    </define>

    <template name="Person" >
        <field name="firstName">
          <string charset="unicode"/>
        </field>
        <string name="lastName" charset="unicode" />
        <field name="gender">
          <type name="Gender" />
        </field>
        <uInt32 name="age" />
        <field name="address" presence="optional">
          <type name="Address" />
        </field>
        <field name="phoneNumbers">
            <type name="PhoneNumbers" />
        </field>
        <field name="emails">
            <type name="Emails" />
        </field>
        <field name="bloodType">
          <enum>
            <element name="A" />
            <element name="B" />
            <element name="AB" />
            <element name="O" />
          </enum>
        </field>
        <boolean name="married" />
    </template>

</templates>

